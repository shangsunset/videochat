extends layout
  
block content


	.container
		.col-sm-6.col-sm-offset-3
		h1
			span(class="fa fa-sign-in") Signup

		//- if message.length > 0
		//- 	.alert.alert-danger
		//- 		p message

		form(action='/signup', method='post' class="loginForm")
			.form-group
				label Email
				input.form-control(type='email', name='email')
			.form-group
				label Password
				input.form-control(type='password', name='password')
				button.btn.btn-primary.btn-lg.loginButton(type='submit') Signup
		hr
		p Need an account?
			a(href='/')  Login
		
					
		p Or go
			a(href='/')  Home